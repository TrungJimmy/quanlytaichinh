<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:outlineAmbientShadowColor="@color/colorAccent"
    android:layout_height="match_parent">
    <TextView
        android:textColor="@color/blue"
        android:shadowColor="@color/colorAccent"
        android:gravity="center"
        android:textSize="@dimen/_30sdp"
        android:text="Doanh Thu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    //danh mục
    <LinearLayout
        android:weightSum="4"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textviewDanhmuc"
            android:layout_weight="3"
             android:textSize="@dimen/_15sdp"
            android:gravity="center"
            android:text="Danh mục"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <EditText

            android:id="@+id/edittextDanhmuc_1"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>


    //số tiền
    <LinearLayout

        android:weightSum="16"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="6"
            android:gravity="center"
            android:id="@+id/textviewSotien"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Số tiền: "
            android:textSize="20dp" />

        <EditText
            android:inputType="number"
            android:id="@+id/edittextSotien_1"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="VNĐ"
            android:layout_weight="7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    //ngày
    <LinearLayout
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textviewNgay_1"
            android:layout_width="187dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="Ngày:"
            android:textSize="20dp" />
        <EditText
            android:inputType="date"
             android:id="@+id/edittextNgay_1"
            android:hint="Chọn ngày"
            android:layout_weight="7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btnNgay_1"
            android:layout_weight="1"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:background="@drawable/icon_lich" />


    </LinearLayout>

    //ghi chú
    <LinearLayout
        android:weightSum="4"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="3"
            android:gravity="center"
            android:id="@+id/textviewGhichu"
            android:textSize="20dp"
            android:text="Ghi chú:"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <EditText
            android:id="@+id/edittextGhichu_1"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>


    //Button
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/white"
            android:background="@drawable/ovan_button"
           android:layout_marginRight="20dp"
            android:text="HỦY"
            android:id="@+id/buttonHuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/white"
            android:background="@drawable/ovan_hight"
            android:text="LƯU"
            android:id="@+id/buttonLuu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</LinearLayout>
