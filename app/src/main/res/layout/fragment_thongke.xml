                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="$ 10,000,000.00"
                    android:id="@+id/tongThu"
                    android:textSize="18dp"
                    android:textColor="#4c4c4c"
